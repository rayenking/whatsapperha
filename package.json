{
  "name": "whatsapp-rhook",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "A WhatsApp automation project using Baileys.",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npx tsc",
    "start": "node -r tsconfig-paths/register dist/main.js",
    "start:erha": "pm2 start npm --name \"whatsapperha\" -- start",
    "restart": "pm2 restart whatsapperha",
    "stop": "pm2 stop whatsapperha",
    "install-baileys": "npx ts-node lib/baileysDownloader.ts",
    "dev": "cross-env TS_NODE_FILES=true TS_NODE_TRANSPILE_ONLY=true ts-node -r tsconfig-paths/register main.ts"
  },
  "author": "Ryns",
  "license": "ISC",
  "dependencies": {
    "baileys": "github:WhiskeySockets/Baileys",
    "dotenv": "^16.4.5",
    "mongoose": "^8.5.3",
    "pino-pretty": "^11.2.2",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "tar": "^7.4.3",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@types/qrcode": "^1.5.5",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.2"
  }
}
